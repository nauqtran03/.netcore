@model btvn_bai1.Models.Account

<h2>Your profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@Model.Avatar" alt="" style="max-width: 150px; height: auto; display: block; margin: 0;">
    </div>
    <div class="col-md-8">
        <h2>Full Name: @Model.Name</h2>
        <h2>Email: @Model.Email</h2>
        <h2>Phone: @Model.Phone</h2>
        <h2>Address: @Model.Address</h2>
        <h2>Bio: @Model.Bio</h2>
        <h2>
            Gender:
            @if (Model.Gender == 1)
            {
                <span>Male</span>
            }
            else
            {
                <span>Female</span>
            }
        </h2>
        <h2>Birthday: @Model.Birthday.ToString("yyyy-MM-dd")</h2>
        <p>
            <a asp-controller="Account" asp-action="Index" class="btn btn-success btn-block">Back To List</a>
        </p>
    </div>
</div>
