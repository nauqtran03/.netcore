@using btvn_bai1.Models;
@{
    ViewData["Title"] = "Index";
    var account = ViewBag.Accounts;
}
<div class="row">
    @foreach(var item in account){
        <div class="col-md-6">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="@item.Name" style="max-width: 150px; height: auto; display: block; margin: 0;">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-success btn-block">Profile</a>
                    </p>
                </div>
            </div>
        </div>   
    }
</div>